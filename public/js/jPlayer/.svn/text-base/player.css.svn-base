/* @group volume controls */


a.jp-mute,
a.jp-unmute,
a.jp-volume-max {
	width:11px;
	height:16px;
}

div.jp-audio a.jp-mute,
div.jp-audio a.jp-unmute {
	margin-top:5px;
	margin-left: 12px;
}



a.jp-mute {
	background: url("controls.png") no-repeat 0 -100px;
}
a.jp-mute:hover {
	background: url("controls.png") no-repeat 0 -100px;
}
a.jp-unmute {
	background: url("controls.png") no-repeat -20px -100px;
	display: none;
}
a.jp-unmute:hover {
	background: url("controls.png") no-repeat -20px -100px;
}

div.jp-volume-bar {
	position: absolute;
	overflow:hidden;
	background: url("controls.png") 0 -124px repeat-x;
	width:46px;
	height:5px;
	cursor: pointer;
}

div.jp-volume-bar-value {

	background: url("controls.png") 0 -130px repeat-x;
	width:0px;
	height:5px;
}

div.jp-audio div.jp-volume-bar {
	top:40px;
	left:40px;
}




ul{
	list-style: none;
	margin: 0;
	padding: 0;
}

div.jp-playlist{
	display:none;
}

div.jp-jplayer audio,
div.jp-jplayer {
	width:0px;
	height:0px;
}

.controlA{
	text-indent: -9000px;
}
ul.jp-toggles {
	list-style-type:none;
	padding:0;
	margin:0 auto;
	overflow:hidden;
	
}

clear{
	clear: both;
}
