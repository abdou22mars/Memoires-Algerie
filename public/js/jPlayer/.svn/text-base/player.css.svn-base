div.jp-audio{
	position:relative;	
	margin-bottom:  20px;
	background: url(bg_lecteur.png) repeat-x;
	border: 1px solid #fff;
	border-top: none;
	width: 100px;
	height: 50px;
	padding: 5px 0 0 13px;
	
	-moz-box-shadow: 0px 3px 5px 0px #9b9b9b;
-webkit-box-shadow: 0px 3px 5px 0px #9b9b9b;
-o-box-shadow: 0px 3px 5px 0px #9b9b9b;
box-shadow: 0px 3px 5px 0px #9b9b9b;

-webkit-border-bottom-right-radius: 4px;
-webkit-border-bottom-left-radius: 4px;
-moz-border-radius-bottomright: 4px;
-moz-border-radius-bottomleft: 4px;
border-bottom-right-radius: 4px;
border-bottom-left-radius: 4px;
}

.main div.jp-audio{
	width: 32px;
	height: 33px;
}

div.jp-interface ul.jp-controls a {
	display:block;
	overflow:hidden;
	text-indent:-9999px;
}

ul.jp-controls li{
	float: left;
	margin-right: 12px;
}
a.jp-play,
a.jp-pause,
a.jp-next,
a.jp-previous  {
	width:20px;
	height:25px;
}

a.jp-play {
	background: url("controls.png") no-repeat  0 0 ;
}
a.jp-play:hover {
	background: url("controls.png") no-repeat -20px 0;
}

a.jp-pause {
	background: url("controls.png") 0 -25px;
	display: none;
}

a.jp-pause:hover {
	background: url("controls.png") no-repeat -20px -25px;
}

a.jp-next {
	background: url("controls.png") no-repeat 0 -50px;
}
a.jp-next:hover {
	background: url("controls.png") no-repeat -20px -50px;
}


a.jp-previous {
	background: url("controls.png") no-repeat 0 -75px;
}
a.jp-previous:hover {
	background: url("controls.png") no-repeat -20px -75px;
}




